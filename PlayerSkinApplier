import { _decorator, Component, Sprite } from 'cc';
import { SkinManager } from './SkinManager';
const { ccclass } = _decorator;

@ccclass('PlayerSkinApplier')
export class PlayerSkinApplier extends Component {
  start() {
    const skin = SkinManager.getSkin();
    const sprite = this.getComponent(Sprite);

    if (skin && sprite) {
      sprite.spriteFrame = skin;
      console.log('[PlayerSkinApplier] Applied selected skin:', skin.name);
    }
  }
}
